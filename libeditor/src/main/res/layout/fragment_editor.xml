<?xml version="1.0" encoding="utf-8"?>
<com.duy.ide.editor.view.EditorView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <com.duy.ide.editor.core.widget.GutterView
            android:id="@+id/gutter_view"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <com.duy.ide.editor.view.EditAreaView2
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffffff"
            android:enabled="false"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:padding="0dp"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:scrollbarThumbVertical="@android:color/transparent"
            android:scrollbarTrackVertical="@null"
            android:scrollbars="vertical"
            android:typeface="monospace"
            tools:text="Shsadhashdhasdhhasdhahsdhahsdhahs" />

    </LinearLayout>

    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/progress_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:indeterminate="true"
        android:visibility="gone" />

</com.duy.ide.editor.view.EditorView>

